---
import HeroSection from "../components/HeroSection.astro";
import LandingHeader from "../components/LandingHeader.astro";
import ModelS from "../components/ModelS.astro";
import ModelY from "../components/ModelY.astro";
import Model3 from "../components/Model3.astro";
import ModelX from "../components/ModelX.astro";
import Layout from "../layouts/Layout.astro";
import PowerWall from "../components/PowerWall.astro";
import Accesories from "../components/Accesories.astro";
---

<Layout title="Coches eléctricos, energía solar y limpia">
	<LandingHeader />

	<main
    class="snap-y snap-mandatory relative w-full min-h-screen overflow-auto scroll-smooth"
  >
    <div class="snap-center">
      <HeroSection/>
    </div>
    <div class="snap-center">
      <ModelS />
    </div>
    <div class="snap-center">
      <Model3 />
    </div>
    <div class="snap-center">
      <ModelX />
    </div>
    <div class="snap-center">
      <ModelY />
    </div>
    <div class="snap-center">
      <PowerWall />
    </div>
    <div class="snap-center">
      <Accesories />
    </div>
  </main>
</Layout>



